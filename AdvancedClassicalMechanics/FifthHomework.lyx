\begin_inset Formula 
\[
\left[Q,P\right]_{\left(q,p\right)}=\left(-\frac{1}{q}\right)\left(-q\csc^{2}p\right)-\left(\cot p\right)\left(\cot p\right)=\csc^{2}p-\cot^{2}p,
\]

\end_inset


\begin_inset Formula 
\[
\implies\left[Q,P\right]_{\left(q,p\right)}=\csc^{2}p-\cot^{2}p,
\]

\end_inset

but 
\begin_inset Formula $1+\cot^{2}p=\csc^{2}p$
\end_inset

, then 
\begin_inset Formula 
\[
\left[Q,P\right]_{\left(q,p\right)}=1,
\]

\end_inset

