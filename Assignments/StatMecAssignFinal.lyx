\[
\implies n\frac{2\pi^{2}}{\left(2S+1\right)}\left(\frac{\hbar}{2mk_{B}T}\right)^{3/2}=n\frac{2\pi^{2}}{\left(2S+1\right)}\left(\frac{\frac{\hbar}{2\pi}}{\frac{2mk_{B}T}{2\pi}}\right)^{3/2},
\]

\end_inset


\begin_inset Formula 
\[
\implies n\frac{2\pi^{2}}{\left(2S+1\right)}\left(\frac{\frac{\hbar}{2\pi}}{\frac{2mk_{B}T}{2\pi}}\right)^{3/2}=n\frac{2\pi^{2}}{\left(2S+1\right)}\left(\frac{\frac{\hbar}{2\pi}}{\frac{2mk_{B}T}{2\pi}}\right)^{3/2}\frac{\frac{1}{\hbar^{3}}}{\frac{1}{\hbar^{3}}},
\]

\end_inset

but we know that 
\begin_inset Formula 
\[
n_{Q}=\frac{1}{\hbar^{3}}\left(\frac{mk_{B}T}{2\pi}\right)^{3/2},
\]

\end_inset

thus if follows that 
\begin_inset Formula 
\[
n\frac{2\pi^{2}}{\left(2S+1\right)}\left(\frac{\frac{\hbar}{2\pi}}{\frac{2mk_{B}T}{2\pi}}\right)^{3/2}\frac{\frac{1}{\hbar^{3}}}{\frac{1}{\hbar^{3}}}=\frac{n}{n_{Q}}\frac{2\pi^{1/2}\hbar^{-3/2}}{\left(2S+1\right)}
\]

\end_inset


\end_layout

