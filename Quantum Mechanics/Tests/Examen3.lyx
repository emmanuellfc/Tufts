\begin_layout Standard
\paragraph_spacing single
\align block
Generalice el resultado para el caso de un sistema con un número arbitrario
 de 
\begin_inset Formula $N$
\end_inset

 centro idénticos localizados en los puntos 
\begin_inset Formula $\mathbf{a}_{n}$
\end_inset

 con 
\begin_inset Formula $n=1,2,...,N$
\end_inset

 .
 
\end_layout

\begin_layout Standard
\paragraph_spacing single
\align block

\series bold
Solución.
\end_layout

\begin_layout Standard
La amplitud de dispersión, en la aproximación de Born esta dada por 
\begin_inset Formula 
\[
f^{\left(1\right)}\left(\mathbf{k}^{\prime},\mathbf{k}\right)=-\frac{m}{2\pi\hbar^{2}}\int d^{3}x\exp\left[i\left(\mathbf{k}-\mathbf{k}^{\prime}\right)\right]\langle\mathbf{k}^{\prime}|V|\mathbf{k}^{\prime}\rangle,
\]

\end_inset


\begin_inset Formula 
\[
f^{\left(1\right)}\left(\mathbf{k}^{\prime},\mathbf{k}\right)=-\frac{4\pi^{2}m}{\hbar^{2}}\int\frac{d^{3}r}{\left(2\pi\right)^{3}}\exp\left(i\mathbf{r}\cdot\mathbf{q}\right)\left[V_{0}\left(r\right)+V\left(|\mathbf{r-a}|\right)\right],
\]

\end_inset

la cual se puede escribir como 
\begin_inset Formula 
\begin{equation}
f^{\left(1\right)}\left(\mathbf{k}^{\prime},\mathbf{k}\right)=f_{0}^{\left(1\right)}\left(q\right)-\frac{4\pi^{2}m}{\hbar^{2}}\int\frac{d^{3}r}{\left(2\pi\right)^{3}}\exp\left(i\mathbf{r}\cdot\mathbf{q}\right)\left[V\left(|\mathbf{r-a}|\right)\right],
\end{equation}

\end_inset

donde 
\begin_inset Formula 
\[
f_{0}^{\left(1\right)}\left(q\right)=-\frac{4\pi^{2}m}{\hbar^{2}}\int\frac{d^{3}r}{\left(2\pi\right)^{3}}\exp\left(i\mathbf{r}\cdot\mathbf{q}\right)V_{0}\left(r\right).
\]

\end_inset

Ahora bien, para el caso de 
\begin_inset Formula $N$
\end_inset

 puntos de dispersión, tenemos que la amplitud de dispersión, en la aproximación
 de Born, viene dada por 
\begin_inset Formula 
\[
f^{\left(1\right)}\left(\hat{\mathbf{r}}\right)=-\frac{m}{2\pi\hbar^{2}}\int d^{3}r^{\prime}\exp\left[i\mathbf{q}\cdot\mathbf{r}^{\prime}\right]\sum_{i=1}^{N}V_{0}\left(\left|\mathbf{r}^{\prime}-\mathbf{a}_{i}\right|\right),
\]

\end_inset

donde 
\begin_inset Formula $\mathbf{q}=\mathbf{k}-\mathbf{k}^{\prime}$
\end_inset

.
 Si ahora definimos 
\begin_inset Formula $\overrightarrow{\rho}=\mathbf{r}^{\prime}-\mathbf{r}_{i}$
\end_inset

, tenemos que 
\begin_inset Formula 
\[
\exp\left[i\mathbf{q}\cdot\mathbf{r}^{\prime}\right]=\exp\left[i\mathbf{q}\cdot\overrightarrow{\rho}\right]\exp\left[i\mathbf{q}\cdot\mathbf{r}_{i}\right]
\]

\end_inset

de manera que 
\begin_inset Formula 
\[
f^{\left(1\right)}\left(\hat{\mathbf{r}}\right)=-\frac{m}{2\pi\hbar^{2}}\sum_{i=1}^{N}\int d^{3}r^{\prime}\exp\left[i\mathbf{q}\cdot\mathbf{r}^{\prime}\right]V_{0}\left(\left|\mathbf{r}^{\prime}-\mathbf{a}_{i}\right|\right),
\]

\end_inset


\begin_inset Formula 
\[
\implies f^{\left(1\right)}\left(\hat{\mathbf{r}}\right)=-\frac{m}{2\pi\hbar^{2}}\sum_{i=1}^{N}\exp\left[i\mathbf{q}\cdot\mathbf{r}_{i}\right]\int d^{3}r^{\prime}\exp\left[i\mathbf{q}\cdot\overrightarrow{\rho}\right]V_{0}\left(\left|\mathbf{r}^{\prime}-\mathbf{a}_{i}\right|\right),
\]

\end_inset

con lo cual se tiene
\begin_inset Formula 
\[
f^{\left(1\right)}\left(\hat{\mathbf{r}}\right)=-\frac{m}{2\pi\hbar^{2}}\sum_{i=1}^{N}\exp\left[i\mathbf{q}\cdot\mathbf{r}_{i}\right]\int d^{3}r^{\prime}\exp\left[i\mathbf{q}\cdot\overrightarrow{\rho}\right]V_{0}\left(\left|\mathbf{r}^{\prime}-\mathbf{a}_{i}\right|\right),
\]

\end_inset

o bien
\begin_inset Formula 
\begin{equation}
f^{\left(1\right)}\left(\hat{\mathbf{r}}\right)=-\frac{m\sqrt{2\pi}}{\hbar^{2}}\widetilde{V}_{0}\left(q\right)\sum_{i=1}^{N}\exp\left[i\mathbf{q}\cdot\mathbf{r}_{i}\right],
\end{equation}

\end_inset

donde 
\begin_inset Formula $\widetilde{V}_{0}$
\end_inset

 es la transformadad de Fourier del potencial dado 
\begin_inset Formula $V_{0}$
\end_inset

.
\end_layout

