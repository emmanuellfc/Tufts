\begin_layout Enumerate
El teorema de proyección nos dice que todos los elementos de matriz deun
 operador vectorial 
\begin_inset Formula $\overrightarrow{V}$
\end_inset

 restringidos a un subespacio con valor propio 
\begin_inset Formula $j$
\end_inset

 son proporcionales a los elementos de la matriz 
\begin_inset Formula $\overrightarrow{J}$
\end_inset

.
 Ahora bien, de manera geometrica, pensando a 
\begin_inset Formula $\overrightarrow{J}$
\end_inset

 como un vector en el sentido usual, tenemos que el teorema de proyección
 nos dice que 
\begin_inset Formula 
\[
\left(\overrightarrow{V}\cdot\overrightarrow{x}_{j}\right)\overrightarrow{x}_{j},\ \ \ \overrightarrow{x}_{j}=\frac{\overrightarrow{j}}{|\overrightarrow{j}|},
\]

\end_inset

de manera que 
\begin_inset Formula 
\[
\left(\overrightarrow{V}\cdot\overrightarrow{x}_{j}\right)\overrightarrow{x}_{j}=\left(\frac{\overrightarrow{V}\cdot\overrightarrow{J}}{|\overrightarrow{j}|^{2}}\right)\overrightarrow{j}.
\]

\end_inset


\end_layout

\begin_layout Enumerate
Sabemos que 
\begin_inset Formula 
\[
\langle\alpha^{\prime};jm|\overrightarrow{J}\cdot\overrightarrow{V}|\alpha;jm\rangle=\sum_{q}\left(-1\right)^{q}\langle\alpha^{\prime};jm|J_{q}V_{q}|\alpha;jm\rangle,
\]

\end_inset


\begin_inset Formula 
\[
\implies\sum_{q}\left(-1\right)^{q}\langle\alpha^{\prime};jm|J_{q}\mathbb{I}V_{q}|\alpha;jm\rangle=\sum_{q}\left(-1\right)^{q}\langle\alpha^{\prime};jm|J_{q}\sum_{m^{\prime}}|\alpha^{\prime};jm^{\prime}\rangle\langle\alpha^{\prime};jm|V_{q}|\alpha;jm\rangle,
\]

\end_inset


\begin_inset Formula 
\[
\implies\langle\alpha^{\prime};jm|\overrightarrow{J}\cdot\overrightarrow{V}|\alpha;jm\rangle=\sum_{q}\sum_{m^{\prime}}\left(-1\right)^{q}\langle\alpha^{\prime};jm|J_{q}|\alpha^{\prime};jm^{\prime}\rangle\langle\alpha^{\prime};jm|V_{q}|\alpha;jm\rangle.
\]

\end_inset

Si ahora usamos el teorema de Wigner-Eckart, tenemos que 
\begin_inset Formula 
\[
\langle\alpha^{\prime};jm|\overrightarrow{J}\cdot\overrightarrow{V}|\alpha;jm\rangle=\sum_{q}\sum_{m^{\prime}}\left(-1\right)^{q}\langle jm|1qjm^{\prime}\rangle\langle jm^{\prime}|1-qjm\rangle\langle\alpha^{\prime}j\bigparallel J\bigparallel\alpha^{\prime}j\rangle\langle\alpha^{\prime}j\bigparallel V\bigparallel\alpha^{\prime}j\rangle,
\]

\end_inset

pero 
\begin_inset Formula 
\[
\langle jm^{\prime}|1-qjm\rangle=\left(-1\right)^{q}\langle1qjm^{\prime}|jm\rangle,
\]

\end_inset

de manera que 
\begin_inset Formula 
\[
\langle\alpha^{\prime};jm|\overrightarrow{J}\cdot\overrightarrow{V}|\alpha;jm\rangle=\sum_{q}\sum_{m^{\prime}}\left(-1\right)^{2q}\langle jm|1qjm^{\prime}\rangle\langle1qjm^{\prime}|jm\rangle\langle\alpha^{\prime}j\bigparallel J\bigparallel\alpha^{\prime}j\rangle\langle\alpha^{\prime}j\bigparallel V\bigparallel\alpha^{\prime}j\rangle,
\]

\end_inset


\begin_inset Formula 
\[
\implies\langle\alpha^{\prime};jm|\overrightarrow{J}\cdot\overrightarrow{V}|\alpha;jm\rangle=\sum_{q}\sum_{m^{\prime}}\langle jm|1qjm^{\prime}\rangle\langle1qjm^{\prime}|jm\rangle\langle\alpha^{\prime}j\bigparallel J\bigparallel\alpha^{\prime}j\rangle\langle\alpha^{\prime}j\bigparallel V\bigparallel\alpha^{\prime}j\rangle,
\]

\end_inset

por otra parte, observemos que 
\begin_inset Formula 
\[
\sum_{q}\sum_{m^{\prime}}\langle jm|1qjm^{\prime}\rangle\langle1qjm^{\prime}|jm\rangle=1,
\]

\end_inset

con lo cual, tenemos que 
\begin_inset Formula 
\[
\langle\alpha^{\prime};jm|\overrightarrow{J}\cdot\overrightarrow{V}|\alpha;jm\rangle=\langle\alpha^{\prime}j\bigparallel J\bigparallel\alpha^{\prime}j\rangle\langle\alpha^{\prime}j\bigparallel V\bigparallel\alpha^{\prime}j\rangle.
\]

\end_inset

Ahora bien, la cantidad 
\begin_inset Formula $\overrightarrow{J}\cdot\overrightarrow{V}$
\end_inset

 es un escalar, por lo tanto, su valor esperado no depende de 
\begin_inset Formula $m$
\end_inset

, esto es la regla de selección nos dice que los coeficientes de Clebsch-Gordan
 son independientes de 
\begin_inset Formula $m$
\end_inset

.
 Ahora demostremos que 
\begin_inset Formula 
\[
\left|\langle\alpha^{\prime};j\bigparallel J\bigparallel\alpha;j\rangle\right|^{2}=\hbar^{2}j\left(j+1\right),\ \ \ \forall\alpha.
\]

\end_inset

Usemos el resultado anterior pero con las siguientes sustituciones 
\begin_inset Formula $\overrightarrow{V}=\overrightarrow{J}$
\end_inset

 y 
\begin_inset Formula $\alpha^{\prime}=\alpha$
\end_inset

, de manera que 
\begin_inset Formula 
\[
\langle\alpha^{\prime};jm|\overrightarrow{J}\cdot\overrightarrow{J}|\alpha;jm\rangle=\langle\alpha^{\prime}j\bigparallel J\bigparallel\alpha^{\prime}j\rangle\langle\alpha^{\prime}j\bigparallel J\bigparallel\alpha^{\prime}j\rangle,
\]

\end_inset

pero 
\begin_inset Formula 
\[
\langle\alpha^{\prime};jm|\overrightarrow{J}\cdot\overrightarrow{J}|\alpha;jm\rangle=\langle\alpha^{\prime};jm|\overrightarrow{J}^{2}|\alpha;jm\rangle=j\left(j+1\right),
\]

\end_inset

y 
\begin_inset Formula 
\[
\langle\alpha^{\prime}j\bigparallel J\bigparallel\alpha^{\prime}j\rangle\langle\alpha^{\prime}j\bigparallel J\bigparallel\alpha^{\prime}j\rangle=\left|\langle\alpha^{\prime}j\bigparallel J\bigparallel\alpha^{\prime}j\rangle\right|^{2},
\]

\end_inset

de manera que 
\begin_inset Formula 
\[
\left|\langle\alpha^{\prime};j\bigparallel J\bigparallel\alpha;j\rangle\right|^{2}=\hbar^{2}j\left(j+1\right),\ \ \ \forall\alpha,
\]

\end_inset

es decir, la cantidad anterior es independiente de 
\begin_inset Formula $\alpha$
\end_inset

.
 Ahora demostremos que 
\begin_inset Formula 
\[
\langle jm^{\prime}|1qjm\rangle=\frac{\langle jm^{\prime}|J_{q}|1qjm\rangle}{\hbar\sqrt{j\left(j+1\right)}}.
\]

\end_inset

Por el teorema de Wigner-Eckart, tenemos que 
\begin_inset Formula 
\[
\langle jm^{\prime}|J_{q}|jm\rangle=\langle j\bigparallel J_{q}\bigparallel j\rangle\langle jm^{\prime}|1qjm\rangle,
\]

\end_inset

de manera que 
\begin_inset Formula 
\[
\langle jm^{\prime}|1qjm\rangle=\frac{\langle jm^{\prime}|J_{q}|jm\rangle}{\langle j\bigparallel J_{q}\bigparallel j\rangle},
\]

\end_inset

pero recordemos que
\begin_inset Formula 
\[
\langle j\bigparallel J_{q}\bigparallel j\rangle=\sqrt{j\left(j+1\right)},
\]

\end_inset

entonces 
\begin_inset Formula 
\[
\langle jm^{\prime}|1qjm\rangle=\frac{\langle jm^{\prime}|J_{q}|jm\rangle}{\sqrt{j\left(j+1\right)}}.
\]

\end_inset

Si ahora reunimos todos los lemas anteriores, tenemos que 
\begin_inset Formula 
\[
\langle\alpha^{\prime}jm^{\prime}|V_{q}|\alpha jm\rangle=\langle\alpha^{\prime}j\bigparallel V\bigparallel\alpha j\rangle\langle jm^{\prime}|1qjm\rangle,
\]

\end_inset


\begin_inset Formula 
\[
\langle\alpha^{\prime}j\bigparallel V\bigparallel\alpha j\rangle=\frac{\langle\alpha^{\prime}j|\overrightarrow{J}\cdot\overrightarrow{V}|\alpha j\rangle}{\langle j\bigparallel J\bigparallel j\rangle},
\]

\end_inset


\begin_inset Formula 
\[
\langle jm^{\prime}|1qjm\rangle=\frac{\langle\alpha^{\prime}jm^{\prime}|J_{q}|\alpha jm\rangle}{\langle j\bigparallel J\bigparallel j\rangle},
\]

\end_inset

por lo tanto 
\begin_inset Formula 
\[
\langle\alpha^{\prime}jm^{\prime}|V_{q}|\alpha jm\rangle=\frac{\langle\alpha^{\prime}j|\overrightarrow{J}\cdot\overrightarrow{V}|\alpha j\rangle}{\langle j\bigparallel J\bigparallel j\rangle}\frac{\langle\alpha^{\prime}jm^{\prime}|J_{q}|\alpha jm\rangle}{\langle j\bigparallel J\bigparallel j\rangle}=\frac{\langle\alpha^{\prime}j|\overrightarrow{J}\cdot\overrightarrow{V}|\alpha j\rangle}{j\left(j+1\right)}\langle\alpha^{\prime}jm^{\prime}|J_{q}|\alpha jm\rangle,
\]

\end_inset


\begin_inset Formula 
\[
\implies\langle\alpha^{\prime}jm^{\prime}|V_{q}|\alpha jm\rangle=\frac{\langle\alpha^{\prime}j|\overrightarrow{J}\cdot\overrightarrow{V}|\alpha j\rangle}{j\left(j+1\right)}\langle\alpha^{\prime}jm^{\prime}|J_{q}|\alpha jm\rangle,\ \ \ \forall q,
\]

\end_inset

por lo tanto 
\begin_inset Formula 
\[
\langle\alpha^{\prime}jm^{\prime}|\overrightarrow{V}|\alpha jm\rangle=\frac{\langle\alpha^{\prime}j|\overrightarrow{J}\cdot\overrightarrow{V}|\alpha j\rangle}{j\left(j+1\right)}\langle\alpha^{\prime}jm^{\prime}|\overrightarrow{J}|\alpha jm\rangle,
\]

\end_inset

justo como se queria demostrar.
\end_layout

